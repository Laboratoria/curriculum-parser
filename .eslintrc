{
  "extends": "airbnb-base",
  "env": {
    "jest": true
  },
  "parserOptions": {
    "ecmaVersion": 12
  },
  "rules": {
    "global-require": "off",
    "import/extensions": "off",
    "import/no-dynamic-require": "off",
    "import/prefer-default-export": "off",
    "arrow-parens": [
      "error",
      "as-needed",
      {
        "requireForBlockBody": true
      }
    ],
    "no-multiple-empty-lines": [
      "error",
      {
        "max": 2,
        "maxBOF": 0,
        "maxEOF": 0
      }
    ]
  }
}